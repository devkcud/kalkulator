<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/main"
    android:padding="24dp"
    android:background="#010405">

    <TextView
        android:id="@+id/app_name_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_name" />

    <TextView
        android:id="@+id/display"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/rounded_background"
        android:gravity="end|center_vertical"
        android:paddingHorizontal="16dp"
        android:paddingVertical="36dp"
        android:textSize="24sp"
        android:layout_marginTop="10dp"
        android:layout_below="@id/app_name_text"
        android:text="0" />

    <HorizontalScrollView
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/display"
        android:layout_marginVertical="16dp">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:id="@+id/history"
                android:textColor="@color/white"
                android:layout_margin="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="History"/>
            <Button
                android:id="@+id/undo"
                android:textColor="@color/white"
                android:layout_margin="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Undo"/>
            <Button
                android:id="@+id/redo"
                android:textColor="@color/white"
                android:layout_margin="4dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Redo"/>
        </LinearLayout>
    </HorizontalScrollView>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/line">
        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:id="@+id/clear"
                android:text="C"
                android:layout_margin="4dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:textColor="#FFFFFF"/>
            <Button
                android:id="@+id/del"
                android:text="DEL"
                android:layout_margin="4dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:textColor="#FFFFFF"/>
            <Button
                android:id="@+id/parenthesis"
                android:text="()"
                android:layout_margin="4dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:textColor="#FFFFFF"/>
            <Button
                android:id="@+id/op_divide"
                android:text="/"
                android:layout_margin="4dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:textColor="#FFFFFF"/>
        </TableRow>

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:id="@+id/val_7"
                android:text="7"
                android:layout_margin="4dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:textColor="#FFFFFF"/>
            <Button
                android:id="@+id/val_8"
                android:text="8"
                android:layout_margin="4dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:textColor="#FFFFFF"/>
            <Button
                android:id="@+id/val_9"
                android:text="9"
                android:layout_margin="4dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:textColor="#FFFFFF"/>
            <Button
                android:id="@+id/op_multiply"
                android:text="*"
                android:layout_margin="4dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:textColor="#FFFFFF"/>
        </TableRow>

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:id="@+id/val_4"
                android:text="4"
                android:layout_margin="4dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:textColor="#FFFFFF"/>
            <Button
                android:id="@+id/val_5"
                android:text="5"
                android:layout_margin="4dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:textColor="#FFFFFF"/>
            <Button
                android:id="@+id/val_6"
                android:text="6"
                android:layout_margin="4dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:textColor="#FFFFFF"/>
            <Button
                android:id="@+id/op_subtract"
                android:text="-"
                android:layout_margin="4dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:textColor="#FFFFFF"/>
        </TableRow>

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:id="@+id/val_1"
                android:text="1"
                android:layout_margin="4dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:textColor="#FFFFFF"/>
            <Button
                android:id="@+id/val_2"
                android:text="2"
                android:layout_margin="4dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:textColor="#FFFFFF"/>
            <Button
                android:id="@+id/val_3"
                android:text="3"
                android:layout_margin="4dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:textColor="#FFFFFF"/>
            <Button
                android:id="@+id/op_add"
                android:text="+"
                android:layout_margin="4dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:textColor="#FFFFFF"/>
        </TableRow>

        <TableRow
            android:layout_height="0dp"
            android:layout_weight="1">
            <Button
                android:id="@+id/val_0"
                android:text="0"
                android:layout_margin="4dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:textColor="#FFFFFF"/>
            <Button
                android:id="@+id/val_00"
                android:text="00"
                android:layout_margin="4dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:textColor="#FFFFFF"/>
            <Button
                android:id="@+id/comma"
                android:text="."
                android:layout_margin="4dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:textColor="#FFFFFF"/>
            <Button
                android:id="@+id/op_result"
                android:text="="
                android:layout_margin="4dp"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/button_background"
                android:textColor="#FFFFFF"/>
        </TableRow>
    </TableLayout>
</RelativeLayout>
